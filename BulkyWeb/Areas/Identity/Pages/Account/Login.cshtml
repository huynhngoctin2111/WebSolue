@page
@model LoginModel

<div class="position-absolute top-0 end-0 m-5" style="width: 400px;">
    <!-- Đặt vị trí góc trên bên phải -->
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient py-3">
            <div class="text-center">
                <h4 class="text-white">Log in</h4> <!-- Tiêu đề -->
            </div>
        </div>
        <div class="card-body p-3">
            <section>
                <form id="account" method="post">
                    <h5 class="text-secondary text-center mb-3">
                        Use a local account to log in.
                    </h5>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Remember Me
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-primary w-100">Log in</button>
                    </div>
                    <div class="d-flex justify-content-between pt-2">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="small">Forgot your password?</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="small">Register</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
